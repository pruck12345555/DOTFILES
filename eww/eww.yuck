(defwindow top-window
												:monitor 0
												:geometry (geometry :x "1%"
																																:y "0px"
																																:width "100%"
																																:height "20px"
																																:anchor "top center")
												:stacking "fg"
												:reserve (struts :distance "0px" :side "top")
												:windowtype "dock"
												:wm-ignore false
 (labeled-container
	(battime)
	(button :class "shutdown" :width 100 :onclick "systemctl poweroff" "SHUT DOWN")
	(button :class "reboot" :onclick "systemctl reboot" "REBOOT")
	(button :class "wallpaper" :onclick {wallState == 0 ? "eww update wallState=1 && notify-send 1 && 
																																																								hyprctl hyprpaper reload ,'~/Pictures/animegirl_beach_tux.png'" :
																																																							"eww update wallState=0 && notify-send 0 &&
																																																								hyprctl hyprpaper reload ,'~/Pictures/calamitasRain.png'"}
																																																						"WALLPAPER")
	))

	(defwindow image-window
