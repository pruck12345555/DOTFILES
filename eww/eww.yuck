(defwidget labeled-container []
				(box :class "container" :orientation "h" :space-evenly true 
								(children)))

(defwidget battery [id]
				(box :class "battery" :orientation "h" :space-evenly true 
				"BAT : ${EWW_BATTERY[id].capacity}"
				))

(defwidget time []
				(box :class "time" :orientation "h" :space-evenly true 
				"TIME : ${timePoll}"))

(defwidget battime []
				(box :class "battime" :orientation "h" :space-evenly true
				(battery :id "BAT0")
				(time)
				))

(defpoll timePoll :interval "1s"
																:initial "initial-value"
`date +%H:%M`)

(defvar wallState 0)




